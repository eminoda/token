extends layout

block content
  form.form-horizontal(action="/users/login",method="post")
    .form-group
      label.col-sm-2.control-label(for='inputEmail3') 用户名
      .col-sm-8
        input#inputEmail3.form-control(type='text', placeholder='userName',name="userName")
    .form-group
      label.col-sm-2.control-label(for='inputPassword3') Password
      .col-sm-8
        input#inputPassword3.form-control(type='password', placeholder='Password',name="password")
    .form-group
      .col-sm-offset-2.col-sm-10
        button.btn.btn-default(type='submit') 登录